<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="si.uni_lj.fe.tnvu.parkirajinnajdi.GetDirections"
    android:background="#dddddd">


    <TextView
        android:id="@+id/locationPrintOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_box"
        android:textColor="#ffffff"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/timePrintOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/locationPrintOut"
        android:background="@drawable/rounded_box"
        android:textColor="#ffffff"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/walkNav"
        android:onClick="walkNavigation"
        android:layout_below="@+id/timePrintOut"
        android:text="@string/walkNav"
        android:textColor="#0067a8"
        android:gravity="left|center_vertical"
        android:drawablePadding="40dp"
        android:textSize="18dp"
        android:padding="10dp"
        android:drawableLeft="@drawable/walking"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/busNav"
        android:onClick="busNavigation"
        android:layout_below="@+id/walkNav"
        android:text="@string/busNav"
        android:textColor="#0067a8"
        android:gravity="left|center_vertical"
        android:drawablePadding="40dp"
        android:textSize="18dp"
        android:padding="10dp"
        android:drawableLeft="@drawable/bus"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/driveNav"
        android:onClick="driveNavigation"
        android:layout_below="@+id/busNav"
        android:text="@string/driveNav"
        android:textColor="#0067a8"
        android:gravity="left|center_vertical"
        android:drawablePadding="40dp"
        android:textSize="18dp"
        android:padding="10dp"
        android:drawableLeft="@drawable/car"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/flagFalse"
        android:onClick="confirmDelete"
        android:layout_below="@+id/driveNav"
        android:text="@string/resetFlag"
        android:textColor="#0067a8"
        android:gravity="left|center_vertical"
        android:drawablePadding="40dp"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:drawableLeft="@drawable/delete"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>


</ScrollView>